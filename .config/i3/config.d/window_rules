for_window [class="Wfica"] border none; inhibit_idle visible
for_window [class="Nxplayer.bin"] border none
for_window [title="^(File|Folder)\s*Already Exists\s*—\s*"] floating enable
for_window [title="^(Copying|Moving)\s*—\s*Dolphin"] inhibit_idle open; floating enable
for_window [title="^Extracting\s"] inhibit_idle open; floating enable
