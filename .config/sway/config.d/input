# Input configuration
input type:touchpad {
  dwt disabled
    click_method button_areas
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
    drag disabled
    drag_lock disabled
}

input type:keyboard { 
  xkb_layout us
    xkb_variant "alt-intl"
}

seat seat0 hide_cursor 5000

focus_follows_mouse no
mouse_warping none
xwayland enable
